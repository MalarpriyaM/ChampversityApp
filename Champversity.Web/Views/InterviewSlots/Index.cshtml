@{
    ViewData["Title"] = "Interview Slots Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var slotsWithDetails = ViewBag.SlotsWithDetails as List<object>;
}

<div class="container-fluid">
    <div class="row">
     <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
   <h1>
     <i class="bi bi-calendar-event"></i> Interview Slots Management
       </h1>
      <div>
     <a asp-action="Pending" class="btn btn-outline-warning">
  <i class="bi bi-clock"></i> Pending Slots
   </a>
      </div>
      </div>
        </div>
    </div>

 @if (slotsWithDetails != null && slotsWithDetails.Any())
    {
  <div class="card">
    <div class="card-header">
        <h5 class="mb-0">All Interview Slots</h5>
 </div>
 <div class="card-body">
   <div class="table-responsive">
     <table class="table table-striped table-hover">
   <thead class="table-dark">
     <tr>
     <th>Slot ID</th>
      <th>Student</th>
  <th>University</th>
      <th>Date & Time</th>
    <th>Status</th>
      <th>Application Status</th>
    <th>Actions</th>
      </tr>
  </thead>
  <tbody>
       @foreach (var item in slotsWithDetails)
   {
    var slot = (Champversity.DataAccess.Models.InterviewSlot)((dynamic)item).Slot;
  var student = (Champversity.DataAccess.Models.Student)((dynamic)item).Student;
     
       <tr class="@(slot.IsSelected ? "table-success" : "")">
     <td>@slot.Id</td>
  <td>
    @if (student != null)
        {
 <strong>@student.FirstName @student.LastName</strong><br/>
  <small class="text-muted">@student.Email</small>
        }
     else
        {
      <span class="text-muted">Unknown</span>
   }
 </td>
        <td>@(student?.University ?? "N/A")</td>
     <td>
   <strong>@slot.SlotDateTime.ToString("MMM dd, yyyy")</strong><br/>
      <span class="text-muted">@slot.SlotDateTime.ToString("HH:mm")</span>
       </td>
  <td>
     @if (slot.IsSelected)
      {
     <span class="badge bg-success">
      <i class="bi bi-check-circle"></i> Selected
    </span>
  }
     else
    {
         <span class="badge bg-warning">
    <i class="bi bi-clock"></i> Available
  </span>
     }
       </td>
   <td>
      @if (student != null)
     {
      <span class="badge bg-primary">@student.ApplicationStatus</span>
      }
       </td>
      <td>
 @if (student != null)
       {
      <a asp-action="StudentSlots" asp-route-studentId="@student.Id" class="btn btn-sm btn-outline-primary">
     <i class="bi bi-eye"></i> View Student Slots
       </a>
     }
  </td>
        </tr>
  }
     </tbody>
      </table>
     </div>
      </div>
  </div>
    }
    else
    {
  <div class="card">
      <div class="card-body text-center">
       <i class="bi bi-calendar-event display-1 text-muted"></i>
        <h3 class="mt-3">No Interview Slots</h3>
   <p class="text-muted">No interview slots have been created yet. They will appear here when universities respond with available slots.</p>
      </div>
     </div>
    }
</div>