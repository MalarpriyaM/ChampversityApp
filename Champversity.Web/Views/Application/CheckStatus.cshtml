@{
    ViewData["Title"] = "Check Application Status";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
  <div class="card">
           <div class="card-header bg-primary text-white">
  <h3 class="mb-0">Check Your Application Status</h3>
       </div>
         <div class="card-body">
<p>Enter your application reference number to check your current status.</p>
      
    <form asp-action="CheckStatus" method="get">
     <div class="validation-summary-errors text-danger" asp-validation-summary="ModelOnly"></div>
        
<div class="mb-3">
                 <label for="id" class="form-label">Application Reference Number</label>
        <input type="number" class="form-control" id="id" name="id" required />
         <div class="form-text">This is the number you received when you submitted your application.</div>
      </div>
       
      <div class="d-grid gap-2">
            <button type="submit" class="btn btn-primary">Check Status</button>
                 <a asp-action="Index" class="btn btn-outline-secondary">Back to Application Process</a>
             </div>
      </form>
 </div>
    </div>
     
            <div class="card mt-4">
 <div class="card-header bg-info text-white">
    <h4 class="mb-0">Lost Your Reference Number?</h4>
        </div>
    <div class="card-body">
<p>If you've lost your reference number, please contact our support team:</p>
  <p><strong>Email:</strong> support@champversity.com</p>
<p><strong>Phone:</strong> (123) 456-7890</p>
      <p>Please have your full name and email address ready when you contact us.</p>
   </div>
          </div>
        </div>
    </div>
</div>